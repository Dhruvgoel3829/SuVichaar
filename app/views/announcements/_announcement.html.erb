<div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 p-6">
  <%= link_to announcement_path(announcement), class: "block" do %>
    <div class="flex items-start space-x-4">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
      </div>
      
      <div class="flex-1 min-w-0">
        <h3 class="text-lg font-semibold text-gray-900 mb-2 hover:text-gray-700 transition-colors">
          <%= truncate(announcement.title, length: 60) %>
        </h3>
        <p class="text-sm text-gray-600 mb-3">
          Posted on <%= announcement.posted_on.strftime("%Y-%m-%d %H:%M") if announcement.posted_on %>
          <% if announcement.user.present? %>
            by <%= announcement.user.username %>
          <% elsif announcement.created_by.present? %>
            by <%= announcement.created_by %>
          <% end %>
        </p>
        <div class="flex items-center text-sm text-gray-500">
          <span>View announcement</span>
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </div>
      </div>
    </div>
  <% end %>
</div>
