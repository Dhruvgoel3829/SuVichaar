<div class="min-h-screen bg-gray-100 flex flex-col justify-center sm:py-12">
  <div class="p-10 xs:p-0 mx-auto md:w-full md:max-w-md">
    <h1 class="font-bold text-center text-2xl mb-5">Edit Account</h1>  
    <div class="bg-white shadow w-full rounded-lg divide-y divide-gray-200">
      <div class="px-5 py-7">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="mb-4">
            <label class="font-semibold text-sm text-gray-600 pb-1 block">Username</label>
            <%= f.text_field :username, class: "border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full", readonly: true %>
            <p class="text-xs text-gray-500">Username cannot be changed once set</p>
          </div>

          <div class="mb-4">
            <label class="font-semibold text-sm text-gray-600 pb-1 block">Email</label>
            <%= f.email_field :email, autocomplete: "email", class: "border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" %>
          </div>

          <div class="mb-4">
            <label class="font-semibold text-sm text-gray-600 pb-1 block">Current Password</label>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full", placeholder: "Required to save changes" %>
          </div>

          <div class="mb-4">
            <label class="font-semibold text-sm text-gray-600 pb-1 block">New Password (leave blank if unchanged)</label>
            <%= f.password_field :password, autocomplete: "new-password", class: "border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" %>
          </div>

          <div class="mb-4">
            <label class="font-semibold text-sm text-gray-600 pb-1 block">Confirm New Password</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" %>
          </div>

          <button type="submit" class="transition duration-200 bg-blue-500 hover:bg-blue-600 focus:bg-blue-700 focus:shadow-sm focus:ring-4 focus:ring-blue-500 focus:ring-opacity-50 text-white w-full py-2.5 rounded-lg text-sm shadow-sm hover:shadow-md font-semibold text-center inline-block">
            Update Account
          </button>
        <% end %>
      </div>

      <!-- Danger Zone -->
      <div class="px-5 py-7">
        <h3 class="text-lg font-semibold text-red-600 mb-4">Danger Zone</h3>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <p class="text-sm text-red-700 mb-4">
            Once you delete your account, there is no going back. Please be certain.
          </p>
          <%= button_to "Delete Account", registration_path(resource_name), 
              method: :delete, 
              data: { 
                confirm: "Are you sure? This action cannot be undone. All your data will be permanently deleted.",
                turbo_confirm: "Are you sure? This action cannot be undone. All your data will be permanently deleted."
              }, 
              class: "w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
        </div>
      </div>
    </div>

    <div class="py-5">
      <div class="text-center">
        <%= link_to "Back to Home", root_path, class: "transition duration-200 mx-5 px-5 py-4 cursor-pointer font-normal text-sm rounded-lg text-gray-500 hover:bg-gray-200 focus:outline-none focus:bg-gray-300 focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50 ring-inset" %>
      </div>
    </div>
  </div>
</div>
