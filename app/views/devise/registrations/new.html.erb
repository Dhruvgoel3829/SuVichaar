<div class="bg-gray-100 min-h-screen flex flex-col">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h1 class="mb-8 text-3xl text-center">Sign up</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "block border border-gray-300 w-full p-3 rounded mb-4" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "block border border-gray-300 w-full p-3 rounded mb-4" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "block border border-gray-300 w-full p-3 rounded mb-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "block border border-gray-300 w-full p-3 rounded mb-4" %>
        <button type="submit" class="w-full text-center py-3 rounded bg-blue-500 text-white hover:bg-blue-600 focus:outline-none my-1 transition font-semibold text-sm shadow-sm hover:shadow-md">Create Account</button>
      <% end %>
      
    </div>
    <div class="text-gray-600 mt-6">
      Already have an account? 
      <%= link_to "Log in", new_session_path(resource_name), class: "no-underline border-b border-blue-500 text-blue-500" %>.
    </div>
  </div>
</div>
